# Hide .htaccess file from public direct
<Files .htaccess>
order allow,deny
deny from all
</Files>


RewriteEngine on
RewriteBase /PHP/MyLog/

RewriteRule ^account$ index.php [L]
RewriteRule ^account/signin$ signin_signup_confirm.php?state=signin [L]
RewriteRule ^account/signup$ signin_signup_confirm.php?state=signup [L]
RewriteRule ^home$ index.php [L]
RewriteRule ^post$ post.php [L]

# Testing
RewriteRule ^demo$ controller/SecurityController.php [L]


# Error document
ErrorDocument 403 /PHP/MyLog/errors/403.html
ErrorDocument 404 /PHP/MyLog/errors/404.html
ErrorDocument 500 /PHP/MyLog/errors/404.html


# Disable indexes
Options -Indexes
